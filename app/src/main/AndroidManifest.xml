<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.penn.jba">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".PPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/login"
            android:launchMode="singleTask">


        </activity>
        <activity
            android:name=".ForgetPasswordActivity"
            android:label="@string/reset_password"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".TabsActivity"
            android:label="@string/title_activity_tabs">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".SignUp1Activity"
            android:label="@string/action_sign_up"
            android:launchMode="singleTask"
            android:parentActivityName=".LoginActivity"></activity>
        <activity
            android:name=".SignUp2Activity"
            android:label="@string/action_sign_up"
            android:launchMode="singleTask"
            android:parentActivityName=".SignUp1Activity"></activity>
        <activity
            android:name=".SignUp3Activity"
            android:label="@string/finish_sign_up"
            android:launchMode="singleTask"
            android:parentActivityName=".SignUp2Activity"></activity>
    </application>

</manifest>